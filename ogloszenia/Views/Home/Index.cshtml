@model List<ogloszenia.Models.Offer>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
     <table>
            <tr>
                <th style="font-weight: bold;">
                    <p>Nazwa</p>
                </th>
                <th style="font-weight: bold;">
                    <p>Data</p>
                </th>
                <th>&nbsp</th>
            </tr>
        @foreach (var item in Model) 
        {
            <tr id="borders">
                <th>
                    <p>@item.name</p>
                </th>
                <th>
                    <p>@item.date</p>
                </th>
                <th>
                    <form method="post">
                        <button name="buttonid" type="submit" class="btn btn-primary" value="@item.id">Szczegóły</button>
                    </form>
                </th>
            </tr>
        }
        </table>
</div>
